# Google Drive API Configuration
# These will be used in Phase 4 for Google Drive integration
# Get these from: https://console.cloud.google.com/

# Google OAuth 2.0 Client ID
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_client_id_here

# Google API Key
NEXT_PUBLIC_GOOGLE_API_KEY=your_api_key_here

# Google Drive API Scopes (default: drive.file)
# This scope allows the app to create and access files that it creates
NEXT_PUBLIC_GOOGLE_DRIVE_SCOPE=https://www.googleapis.com/auth/drive.file

# Optional: Specific folder ID for storing generated videos
# Leave empty to use root folder
NEXT_PUBLIC_GOOGLE_DRIVE_FOLDER_ID=
